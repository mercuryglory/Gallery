<resources >

    <!-- Base application theme. -->
    <style name="Album.Theme.Activity" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary" >@color/album_colorPrimary</item >
        <item name="colorPrimaryDark" >@color/album_colorPrimaryDark</item >
        <item name="colorAccent" >@color/album_colorAccent</item >

        <item name="android:actionBarSize">42dp</item>
    </style >

    <style name="album_dialog_folder" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="album_popup_anim">
        <item name="android:windowEnterAnimation">@anim/album_pop_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/album_pop_bottom_out</item>
    </style>

</resources >
